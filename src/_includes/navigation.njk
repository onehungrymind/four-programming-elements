<div class="w-full lg:w-1/5 lg:px-6 text-xl text-gray-800 leading-normal">

  <div class="sticky top-10 w-full inset-0 lg:block mt-0 border border-gray-400 lg:border-transparent bg-white shadow lg:shadow-none lg:bg-transparent z-20" style="top:5em;">
    <h3 class="font-bold">Steps</h3>
    <ul class="list-reset">
      {% for post in collections.posts %}
        <li class="py-2 md:my-0 hover:bg-purple-100 lg:hover:bg-transparent">
          {% if post.url == page.url %}
            <a href="{{ post.url }}" 
            class="block pl-4 align-middle text-gray-700 no-underline hover:text-purple-500 border-l-4 border-transparent lg:border-purple-500 lg:hover:border-purple-500">
              <span class="pb-1 md:pb-0 text-sm text-gray-900 font-bold">{{ post.data.title }}</span>
            </a>
          {% else %}
            <a href="{{ post.url }}" 
            class="block pl-4 align-middle text-gray-700 no-underline hover:text-purple-500 border-l-4 border-transparent lg:hover:border-gray-400">
              <span class="pb-1 md:pb-0 text-sm">{{ post.data.title }}</span>
            </a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
    <div class="my-6"></div>

    <h3 class="font-bold">Bonus</h3>

    <ul class="list-reset">
      {% for post in collections.bonuses %}
        <li class="py-2 md:my-0 hover:bg-purple-100 lg:hover:bg-transparent">
          {% if post.url == page.url %}
            <a href="{{ post.url }}" 
            class="block pl-4 align-middle text-gray-700 no-underline hover:text-purple-500 border-l-4 border-transparent lg:border-purple-500 lg:hover:border-purple-500">
              <span class="pb-1 md:pb-0 text-sm text-gray-900 font-bold">{{ post.data.title }}</span>
            </a>
          {% else %}
            <a href="{{ post.url }}" 
            class="block pl-4 align-middle text-gray-700 no-underline hover:text-purple-500 border-l-4 border-transparent lg:hover:border-gray-400">
              <span class="pb-1 md:pb-0 text-sm">{{ post.data.title }}</span>
            </a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
</div>